put: [4, 5, 1, 2, 3]`\n"],"metadata":{"id":"LqcK8ywr9D7u"}},{"cell_type":"code","source":["def rotate_one(arr):\n","    \"\"\"\n","    Rotates the array elements once to the right\n","\n","    Args:\n","        arr: Array to rotate\n","    Return:\n","        arr: Array rotated by one step to the right\n","    \"\"\"\n","    l = len(arr)\n","    temp = arr[-1]\n","    for i in range(l):\n","        arr[l-i-1]=arr[l-i-2]\n","    arr[0] = temp\n","    return arr"],"metadata":{"id":"CUT85N1UEvCo"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":["arr=[1, 2, 3, 4, 5]\n","print(rotate_one(arr))"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"sJtMGHlbFd11","executionInfo":{"status":"ok","timestamp":1744211538658,"user_tz":240,"elapsed":4,"user":{"displayName":"Somak Das","userId":"03478932487509571783"}},"outputId":"ddc42d33-11d6-4228-c4c6-420e91dff720"},"execution_count":null,"outputs":[{"output_type":"stream","name":"stdout","text":["[5, 1, 2, 3, 4]\n"]}]},{"cell_type":"code","source":["def rotate_k(arr,k):\n","    \"\"\"\n","    Rotates a given array to the right by k steps.\n","    It applies the rotate_one() function k times\n","    on the given array.\n","\n","    Args:\n","        arr: Array to rotate.\n","    Returns:\n","        arr: Array rotated by k steps to the right.\n","    \"\"\"\n","    for i in range(k):\n","        arr = rotate_one(arr)\n","    return arr"],"metadata":{"id":"LaUT9U5qFnwN"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":["arr=[1, 2, 3, 4, 5]\n","print(rotate_k(arr,3))"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"executionInfo":{"status":"ok","timestamp":1744211540460,"user_tz":240,"elapsed":5,"user":{"displayName":"Somak Das","userId":"03478932487509571783"}},"outputId":"eef007b4-710c-4137-8d63-d10e4d4fc8f6","id":"Tgib5-76F8_K"},"execution_count":null,"outputs":[{"output_type":"stream","name":"stdout","text":["[3, 4, 5, 1, 2]\n"]}]},{"cell_type":"markdown","source":